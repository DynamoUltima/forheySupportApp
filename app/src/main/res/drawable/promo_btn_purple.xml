<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/purpleLight" />
            <stroke
                android:width="1dp"
                android:color="@color/purpleLight" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
    <item >
        <shape>
            <gradient
                android:startColor="@color/purple500"
                android:endColor="@color/purple500"
                android:angle="360" ></gradient>
            <stroke
                android:width="1dp"
                android:color="@color/action_color" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
</selector>
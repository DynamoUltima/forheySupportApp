<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="10dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Garment Type"
        android:textSize="17dp"/>

    <AutoCompleteTextView
        android:id="@+id/actGarment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quantity"
        android:textSize="17dp"/>

    <EditText
        android:id="@+id/edtQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/rgService">

        <RadioButton
            android:id="@+id/rdWashFold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wash &amp; Fold"
            android:layout_margin="10dp"/>

        <RadioButton
            android:id="@+id/rdLaundry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Laundry"
            android:layout_margin="10dp"/>

        <RadioButton
            android:id="@+id/rdDryClean"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dry Cleaning"
            android:layout_margin="10dp"/>

        <RadioButton
            android:id="@+id/rdPressOnly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Press Only"
            android:layout_margin="10dp"/>
    </RadioGroup>

    <Button
        android:id="@+id/btnSaveInv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:background="@drawable/bg_order_update"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"/>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90sp"
                android:background="@color/blueLight"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="ORDER BILL"
                    android:textSize="20sp"
                    android:textColor="#fff"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="30sp">
                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="20sp"
                    android:text="Service Cost"
                    android:textSize="17sp"
                    android:gravity="left"/>
                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="20sp"
                    android:text="0.0"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:id="@+id/tvServiceCost"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="30sp">
                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Booking Fee"
                    android:textSize="17sp"
                    android:gravity="left"/>
                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0.0"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:id="@+id/tvBookingFee"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/blueDark"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="40sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="30sp">
                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sub Total"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:gravity="left"/>
                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0.0"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:id="@+id/tvSubTotal"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="30sp"
                android:id="@+id/llPromotion"
                android:visibility="gone">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Promotion"
                    android:textSize="17sp"
                    android:gravity="left"/>

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0.0"
                    android:gravity="left"
                    android:textSize="17sp"
                    android:id="@+id/tvPromo"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="30sp"
                android:id="@+id/llReferrals"
                android:visibility="gone">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Referrals"
                    android:textSize="17sp"
                    android:gravity="left"/>
                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0.0"
                    android:gravity="left"
                    android:textSize="17sp"
                    android:id="@+id/tvReferAmt"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="30sp">
                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total Discount"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:gravity="left"/>
                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-0.0"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:id="@+id/total_discount"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/blueDark"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="40sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="30sp">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:gravity="left"/>

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0.0"
                    android:textStyle="bold"
                    android:id="@+id/tvTotal"
                    android:textSize="17sp"
                    android:gravity="center"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/blueDark"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="40sp"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="40sp">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Close"
                    android:id="@+id/btnOrderCancel"
                    android:background="@drawable/orderbill_btn_bg"
                    android:textColor="@color/white"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Send Bill"
                    android:textColor="@color/white"
                    android:background="@drawable/forhey_action_color"
                    android:id="@+id/btnOrderBillSend"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>